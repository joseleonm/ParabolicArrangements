#!/bin/bash
set -e

# Este script lo ejecuta repo2docker automáticamente durante el build.
# Aquí sí existe 'sage' correctamente en el PATH del entorno de la imagen.

# Precalienta Sage para acelerar el primer uso
sage -c 'print("Sage present:", version()); _=1+1'

# Verifica import desde Python
python - <<'PY'
from sageall import RootSystem
print("Python puede importar sageall y RootSystem OK")
PY
